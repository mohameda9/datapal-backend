{
    "build": { "dockerfile": "../Dockerfile" },
    "runArgs": [
        "--privileged"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "ms-python.flake8"
            ],
            "settings": {
                "flake8.args": [
                    "--ignore=E501"
                ]
            }
        }
    }
}
